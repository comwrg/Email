<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="me.demo.email.activity.SplashActivity">

    <TextView
            android:text="帐号        ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/reg_lab_usr" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/reg_txt_usr"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/reg_lab_pwd1" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/reg_txt_pwd1"
            android:layout_marginTop="16dp" android:text="密码        ："/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/reg_txt_usr" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/reg_lab_usr"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/reg_lab_header"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/reg_txt_pwd1"
            app:layout_constraintStart_toEndOf="@+id/reg_lab_pwd1" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/reg_txt_usr"/>
    <TextView
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="30sp"
            android:textColor="@android:color/background_dark" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" android:id="@+id/reg_lab_header"/>
    <Button
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/reg_btn_reg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/reg_txt_pwd2"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/reg_txt_pwd1"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reg_lab_pwd2" android:layout_marginStart="16dp"
            android:id="@+id/reg_txt_pwd2"/>
    <TextView
            android:text="再次输入："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_lab_pwd2"
            app:layout_constraintTop_toTopOf="@+id/reg_txt_pwd2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>